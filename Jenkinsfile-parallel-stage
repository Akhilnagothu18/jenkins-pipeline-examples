pipeline {
	agent none
	
	stages {
		stage("Build") {
			steps {
				agent any
				sh 'mvn -v'
			}
		}
		
		stage("Testing") {
			parallel {
				stage("Unit Tests") {
					agent { docker 'openjdk:8-jdk-alpine' }
					steps {
						echo "Unit Tests!"
					}
				}
				stage("Functional Tests") {
					agent any
					steps {
						echo "Functional Tests!"
					}
				}
				stage("Integration Tests") {
					agent any
					steps {
						echo "Integration Tests!"
					}
				}
			}
		}
		
		stage("Deploy") {
			agent any
			steps {
				echo "Deploy!"
			}
		}
	}
}